import java.util.Scanner;

public class LoginSenha {
	
	public static void main(String[] args) {
		
		String user = "John";
		String password = "123456";
		String login, senha;
		Scanner entrada = new  Scanner(System.in);
		
		boolean tacerto = false;
		
		do {
			System.out.print("Digite o login: ");
			login = entrada.next();
			System.out.print("Digite a senha: ");
			senha = entrada.next();
			if (login.equalsIgnoreCase(user) && senha.equals(password))
				tacerto = true;
				 else 
					System.out.println("Login ou senha incorreta!\n");
			
		} while (!tacerto);
		System.out.println("Login e senha corretos!");
		
		//De outra maneira ficaria:
		 
		/*do {
		 
		System.out.print("Digite o login: ");
		login = entrada.next();
		
		System.out.print("Digite a senha: ");
		senha = entrada.next();
		
		} while (!(login.equalsIgnoreCase(user) && senha.equals(password)));
		
		System.out.println("Login e senha corretos!");*/
		
	}

}
